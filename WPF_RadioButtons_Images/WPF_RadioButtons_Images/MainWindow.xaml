<Window x:Class="WPF_RadioButtons_Images.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_RadioButtons_Images"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <StackPanel Margin="10">
    <Label FontWeight="Bold" FontSize="20">Do you like me ?</Label>
    <RadioButton Margin="5">
      <WrapPanel>
        <Rectangle Fill="Green" Width="16" Height="16"/>
        <TextBlock Text="Yes" Foreground="Green" Margin="5,0,0,0"/>
      </WrapPanel>
    </RadioButton>
    <RadioButton Margin="5">
      <WrapPanel>
        <Rectangle Fill="Red" Width="16" Height="16"/>
        <TextBlock Text="No" Foreground="Red" Margin="5,0,0,0"/>
      </WrapPanel>
    </RadioButton>
    <RadioButton Margin="5">
      <WrapPanel>
        <Image Source="C:\Complete C# Masterclass\WPF_RadioButtons_Images\WPF_RadioButtons_Images\maybe.jpg" Width="32" Height="16"/>
        <TextBlock Text="Maybe" Margin="5,0,0,0"/>
      </WrapPanel>
    </RadioButton>
  </StackPanel>
</Window>
